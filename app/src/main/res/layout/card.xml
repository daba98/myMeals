<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="4dp"
        android:id="@+id/cardview">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/default_photo"
        android:scaleType="centerCrop"
        android:id="@+id/image"
        android:layout_marginBottom="50dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/textLightPrimary"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/title"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/image"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_clock"
        android:layout_marginLeft="20dp"
        android:id="@+id/uhrImageView"
        android:layout_gravity="bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_marginBottom="8dp"
        android:id="@+id/timeToCookTextView"
        android:text="30 min"
        android:textSize="16sp"
        android:textColor="@color/textLightSecondary"
        android:layout_gravity="bottom"
        android:layout_marginStart="45dp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_empty_star"
        android:layout_marginBottom="8dp"
        android:id="@+id/star1"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_empty_star"
        android:layout_marginBottom="8dp"
        android:id="@+id/star2"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_empty_star"
        android:layout_marginBottom="8dp"
        android:id="@+id/star3"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_empty_star"
        android:layout_marginBottom="8dp"
        android:id="@+id/star4"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_empty_star"
        android:layout_marginBottom="8dp"
        android:id="@+id/star5"/>

        </LinearLayout>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="10dp"
        android:text="Einfach"
        android:textColor="@color/textLightSecondary"
        android:textSize="16sp"
        android:id="@+id/difficultyView"
        android:layout_gravity="bottom|right"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_info"
        android:layout_alignBottom="@+id/image"
        android:layout_marginBottom="8dp"
        android:id="@+id/infoImageView"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="88dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/longClickView"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>