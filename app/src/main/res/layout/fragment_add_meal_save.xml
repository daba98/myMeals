<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/save_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@string/save_meal"
        android:background="@drawable/circle"
        android:backgroundTint="@color/textLightPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/meatImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/fleisch_unchecked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fishImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_button" />

    <ImageButton
        android:id="@+id/fishImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/fisch_unchecked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vegetableImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/meatImageButton"
        app:layout_constraintTop_toBottomOf="@+id/save_button" />

    <ImageButton
        android:id="@+id/vegetableImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/gemuese_unchecked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/potatoImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fishImageButton"
        app:layout_constraintTop_toBottomOf="@+id/save_button" />

    <ImageButton
        android:id="@+id/potatoImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/kartoffel_unchecked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/noodlesImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vegetableImageButton"
        app:layout_constraintTop_toBottomOf="@+id/save_button" />

    <ImageButton
        android:id="@+id/noodlesImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/nudeln_unchecked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/riceImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/potatoImageButton"
        app:layout_constraintTop_toBottomOf="@+id/save_button" />

    <ImageButton
        android:id="@+id/riceImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/reis_unchecked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/noodlesImageButton"
        app:layout_constraintTop_toBottomOf="@+id/save_button" />


</androidx.constraintlayout.widget.ConstraintLayout>